<body>
    <header>
        <h1>Equilab</h1>
    </header>
    <div class="desc">
        Este es Equilab, un lugar donde los jóvenes pueden encontrar soluciones a cómo llevar bien el equilibrio digital a través de ellos mismos.
    </div>
    <div class="container">
        <!-- Crear usuario -->
        <div class="user-section">
            <h2>Crear Usuario</h2>
            <label for="username">Nombre de usuario:</label>
            <input type="text" id="username" placeholder="Ingrese su nombre de usuario">
            <button onclick="crearUsuario()">Crear usuario</button>
            <div id="usuario-creado" style="margin-top:10px;color:green;"></div>
        </div>

        <!-- Comentar problemas -->
        <div class="comment-section">
            <h2>Comenta tu problema</h2>
            <label for="comentario">Comentario:</label>
            <textarea id="comentario" rows="3" placeholder="Expón aquí tu problema o situación"></textarea>
            <button onclick="publicarComentario()">Publicar comentario</button>

            <div id="comentarios"></div>
        </div>
    </div>
    
    <script>
        let usuarioActual = '';
        let comentarios = [];

        function crearUsuario() {
            const nombre = document.getElementById('username').value.trim();
            if(nombre === '') {
                alert('Por favor, escriba un nombre de usuario.');
                return;
            }
            usuarioActual = nombre;
            document.getElementById('usuario-creado').innerText = 'Usuario: ' + usuarioActual;
        }

        function publicarComentario() {
            if(!usuarioActual) {
                alert('Primero debe crear un usuario.');
                return;
            }
            const comentario = document.getElementById('comentario').value.trim();
            if(comentario === '') {
                alert('El comentario no puede estar vacío.');
                return;
            }
            comentarios.push({
                autor: usuarioActual,
                texto: comentario,
                respuestas: []
            });
            document.getElementById('comentario').value = '';
            mostrarComentarios();
        }

        function publicarRespuesta(i) {
            if(!usuarioActual) {
                alert('Primero debe crear un usuario.');
                return;
            }
            const respuesta = document.getElementById('respuesta-'+i).value.trim();
            if(respuesta === '') {
                alert('La respuesta no puede estar vacía.');
                return;
            }
            comentarios[i].respuestas.push({
                autor: usuarioActual,
                texto: respuesta
            });
            document.getElementById('respuesta-'+i).value = '';
            mostrarComentarios();
        }

        function mostrarComentarios() {
            const cont = document.getElementById('comentarios');
            cont.innerHTML = '';
            comentarios.forEach((c, i) => {
                const div = document.createElement('div');
                div.className = 'comment';
                div.innerHTML = `<span class="comment-author">${c.autor}:</span> ${c.texto}
                    <div>
                        <textarea id="respuesta-${i}" rows="2" class="reply-box" placeholder="Responde al comentario"></textarea>
                        <button onclick="publicarRespuesta(${i})">Responder</button>
                    </div>
                    <div>
                        ${c.respuestas.map(r => `<div class="reply"><span class="reply-author">${r.autor}:</span> ${r.texto}</div>`).join('')}
                    </div>`;
                cont.appendChild(div);
            });
        }
    </script>
</body>
