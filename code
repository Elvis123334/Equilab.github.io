    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f5f5f9;
            margin: 0;
            padding: 0;
        }
        header {
            background: #4a7efc;
            color: #fff;
            padding: 20px 0;
            text-align: center;
        }
        .desc {
            text-align: center;
            margin: 30px 10px 15px 10px;
            font-size: 1.2em;
            color: #333;
        }
        .container {
            max-width: 650px;
            margin: 0 auto;
            padding: 15px;
        }
        .user-section, .comment-section {
            background: #fff;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            box-shadow: 0px 2px 10px #bbb2;
        }
        label {
            display: block;
            margin-bottom: 8px;
        }
        input, textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 12px;
            border-radius: 4px;
            border: 1px solid #ccc;
            font-size: 1em;
        }
        button {
            padding: 8px 14px;
            background: #4a7efc;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
        }
        .comment, .reply {
            border-top: 1px solid #eee;
            margin-top: 18px;
            padding-top: 12px;
        }
        .comment-author, .reply-author {
            font-weight: bold;
            color: #4a7efc;
